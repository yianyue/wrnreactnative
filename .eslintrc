{
  "extends": "semistandard",
  "rules": {
    "camelcase": 0,
    "comma-dangle": [0, "only-multiline"],
    "react-native/no-unused-styles": 2,
    "react-native/split-platform-components": 2,
    "react/jsx-uses-vars": 2,
    "react/jsx-uses-react": 2,
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
     "ecmaFeatures": {
       "jsx": true,
       "modules": true
     }
   },
   "env": {
    "es6": true,
    "browser": true
  },
  "globals": {
    "__DEV__": true
  },
  "plugins": [
    "react",
     "react-native"
   ]
}
